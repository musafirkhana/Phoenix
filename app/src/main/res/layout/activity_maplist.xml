<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/main_heaad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/map_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/megatron"
                android:text="103 ATTU BAF"
                android:textColor="@color/fontcolor"
                android:textSize="18sp"
                android:textStyle="bold|normal" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/main_heaad"
        android:gravity="center"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:hint="Search places"
            android:layout_alignParentLeft="true"
            android:gravity="center|left"
            android:background="@drawable/rounded_corner"
            android:layout_below="@+id/main_heaad"
            android:ems="10"
            android:text="">

            <requestFocus />
        </AutoCompleteTextView>

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:gravity="center"
            android:fontFamily="@font/megatron"
            android:textSize="16sp"
            android:layout_margin="7dp"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textStyle="bold"
            android:text="ADD" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_linear"
        android:layout_above="@+id/map_generation"
        android:padding="8dp"
        android:layout_centerHorizontal="true" >
    </ListView>

    <Button android:id="@+id/map_generation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Generate map"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/megatron"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/black"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"></Button>

</RelativeLayout>