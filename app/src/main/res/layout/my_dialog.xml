<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_orange_light">

        <TextView android:id="@+id/filter_head"
            android:layout_width="wrap_content"
            android:fontFamily="@font/megatron"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Filter"
            android:layout_centerInParent="true" />

    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_view_height"
            android:layout_marginLeft="@dimen/main_margin_left"
            android:layout_marginTop="@dimen/main_margin_top"
            android:layout_marginRight="@dimen/main_margin_right"
            android:gravity="center">

            <TextView android:id="@+id/tv_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:fontFamily="@font/my_custom_font"
                android:text="Year"
                android:textSize="@dimen/main_text_size" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/rounded_corner">



                <Spinner
                    android:id="@+id/year_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_view_height"
            android:layout_marginLeft="@dimen/main_margin_left"
            android:layout_marginTop="@dimen/main_margin_top"
            android:layout_marginRight="@dimen/main_margin_right"
            android:gravity="center">

            <TextView android:id="@+id/tv_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:fontFamily="@font/my_custom_font"
                android:text="Month"
                android:textSize="@dimen/main_text_size" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/rounded_corner">


                <Spinner
                    android:id="@+id/month_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>
            </RelativeLayout>


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:text="Cancel"
                    android:textSize="20sp"
                    android:fontFamily="@font/megatron"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="50dp"></View>

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:fontFamily="@font/megatron"
                    android:text="APPLY"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>





</LinearLayout>